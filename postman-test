name: Run Postman API Tests

on:
  push:
    branches: [ "dev" ]
  pull_request:
    branches: [ "master", "main" ]

jobs:
  postman-tests:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install Postman CLI
        run: npm install -g @postman/cli

      - name: Authenticate Postman CLI
        run: postman login --with-api-key ${{ secrets.reqres }}

      - name: Run Postman Collection
        run: postman collection run postman-tests/collection.json -e postman-tests/environment.json
